<div class="card mt-5" style="max-width: 800px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="card-img-top" alt="__No Image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary btn-sm">Edit</a>
      </div>
    </div>
  </div>
</div>

<div class="card mt-3">
  <h6 class="card-header py-2">
    {{user.Comments.length}} 已評論餐廳
  </h6>
  <ul class="pagination">
    {{#each user.Comments}}
    <li class="page-item">
      <a class="page-link" href="/restaurants/{{this.RestaurantId}}">
        <img class="img-fluid mx-auto img-thumbnail rounded" style="width:80px;" src="{{this.Restaurant.image}}" alt="">
        <div>{{this.Restaurant.name}}</div>
      </a>
    </li>
    {{/each}}
  </ul>
</div>